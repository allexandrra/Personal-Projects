<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone" >

    <LinearLayout
        android:padding="10dp"
        android:background="@drawable/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <RadioGroup
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radio1"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="176x144, 25 fps, 200 Kbps"
                android:textColor="@color/login_form_details"/>

            <RadioButton
                android:id="@+id/radio2"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="176x144, 25 fps, 250 Kbps"
                android:textColor="@color/login_form_details"/>

            <RadioButton
                android:id="@+id/radio3"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="320x240, 25 fps, 250 Kbps"
                android:textColor="@color/login_form_details"/>

            <RadioButton
                android:id="@+id/radio6"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="352x288, 30 fps, 400 Kbps"
                android:textColor="@color/login_form_details"/>

            <RadioButton
                android:id="@+id/radio7"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="384x288, 25 fps, 375 Kbps"
                android:textColor="@color/login_form_details"/>

            <RadioButton
                android:id="@+id/radio8"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="512x384, 25 fps, 560 Kbps"
                android:textColor="@color/login_form_details"/>

            <RadioButton
                android:id="@+id/radio9"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="512x384, 25 fps, 750 Kbps"
                android:textColor="@color/login_form_details"/>

            <RadioButton
                android:id="@+id/radio10"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="640x480, 25 fps, 1050 Kbps"
                android:textColor="@color/login_form_details"/>
        </RadioGroup>
    </LinearLayout>

</FrameLayout>